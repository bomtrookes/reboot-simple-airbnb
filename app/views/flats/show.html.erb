<div class="container">
  <h1><%= @flat.name %></h1>
  <p><%= @flat.address %></p>
</div>

<div class="container">
  <img src="<%= @flat.picture_url %>" alt="<%= @flat.name %>" style="max-width:500px">
</div>

<div class="container">
  <h3>A bit more about this property...</h3>
  <p><%= @flat.description %></p>
</div>

<div class="container">
  <h3>Book this place</h3>
  <label for="from">From:</label>
  <input id="from">
  <label for="to">To:</label>
  <input id="to">
  <button>Submit</button>
</div>

<hr>
<div class="container">
  <h2>Reviews</h2>
  <% @reviews.each do |review| %>
    <p><%= review.content %></p>
    <p><%= review.rating %>/5</p>
    <br>
  <% end %>
</div>
  <hr>
<%= render "reviews/review" %>
