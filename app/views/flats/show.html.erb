<div class="container">
  <h1><%= @flat.name %></h1>
  <p><%= @flat.address %></p>
</div>

<div class="container">
  <img src="<%= @flat.picture_url %>" alt="<%= @flat.name %>">
</div>

<div class="container">
  <h3>A bit more about this property...</h3>
  <p><%= @flat.description %></p>
</div>

<div class="container">
  <h3>Book this place</h3>
  <label for="from">From:</label>
  <input id="from">
  <label for="to">To:</label>
  <input id="to">
  <button>Submit</button>
</div>
